{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "jsRules": {
    "max-line-length": {
      "options": [160]
    }
  },
  "rules": {
    "max-line-length": {
      "options": [160]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"],
      "severity": "warning"
    },
    "strict-type-predicates": true
  }
}
